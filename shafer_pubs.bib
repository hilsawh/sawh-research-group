	month = apr,
	year = {2020},
	keywords = {3D genome, chromosome conformation, development, early embryogenesis, multiplexed DNA FISH, nuclear lamina, unsupervised clustering},
	pages = {96--111.e6},
	file = {ScienceDirect Full Text PDF:/Users/maxwellshafer/Zotero/storage/KLLCCFFD/Sawh et al. - 2020 - Lamina-Dependent Stretching and Unconventional Chr.pdf:application/pdf;ScienceDirect Snapshot:/Users/maxwellshafer/Zotero/storage/TZBQNQFF/S1097276520300769.html:text/html},
