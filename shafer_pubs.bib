	month = apr,
	year = {2017},
	keywords = {atypical protein kinase C, aurothiomalate, cell polarity, epithelial stratification, GATA3, lineage specification, par complex, prostate development, prostate progenitor cells, spindle orientation},
	pages = {1018--1031},
	file = {Full Text:/Users/maxwellshafer/Zotero/storage/XTAEWFB9/Shafer et al. - 2017 - Lineage Specification from Prostate Progenitor Cel.pdf:application/pdf},
